<?xml version="1.0"?>
<robot name="HMS_Perception" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define robot constants -->
  <xacro:property name="base_width" value="0.31"/>
  <xacro:property name="base_length" value="0.42"/>
  <xacro:property name="base_height" value="0.18"/>

  <xacro:property name="wheel_radius" value="0.10"/>
  <xacro:property name="wheel_width" value="0.04"/>
  <xacro:property name="wheel_ygap" value="0.025"/>

  <xacro:property name="rocker_length" value="0.28"/>
  <xacro:property name="bogie_length" value="0.22"/>
  <xacro:property name="rocker_offset" value="0.16"/>
  <xacro:property name="bogie_offset" value="0.12"/>

  <xacro:property name="arm_link_len" value="0.18"/>
  <xacro:property name="arm_link_radius" value="0.025"/>
  <xacro:property name="arm_base_height" value="${base_height/2}"/>

  <!-- Robot Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Robot Footprint -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0.0 0.0 ${-(wheel_radius+wheel_ygap)}" rpy="0 0 0"/>
  </joint>

  <!-- Rocker-Bogie Suspension (left + right) -->
  <xacro:macro name="rocker" params="side y_reflect">
    <link name="${side}_rocker_link">
      <visual>
        <geometry>
          <box size="${rocker_length} ${wheel_width} ${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
    </link>

    <joint name="${side}_rocker_joint" type="revolute">
      <parent link="base_link"/>
      <child link="${side}_rocker_link"/>
      <origin xyz="0 ${y_reflect*(base_width/2 + wheel_ygap)} 0" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="10" lower="-1.2" upper="1.2" velocity="1"/>
    </joint>

    <link name="${side}_bogie_link">
      <visual>
        <geometry>
          <box size="${bogie_length} ${wheel_width} ${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
    </link>

    <joint name="${side}_bogie_joint" type="revolute">
      <parent link="${side}_rocker_link"/>
      <child link="${side}_bogie_link"/>
      <origin xyz="${-rocker_offset} 0 0" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="10" lower="-1.2" upper="1.2" velocity="1"/>
    </joint>

    <!-- Wheels: front (rocker), mid+rear (bogie) -->
    <xacro:wheel prefix="${side}_front" parent="${side}_rocker_link" x="${rocker_offset}" y="0"/>
    <xacro:wheel prefix="${side}_mid" parent="${side}_bogie_link" x="${bogie_offset}" y="0"/>
    <xacro:wheel prefix="${side}_rear" parent="${side}_bogie_link" x="${-bogie_offset}" y="0"/>
  </xacro:macro>

  <xacro:macro name="wheel" params="prefix parent x y">
    <link name="${prefix}_wheel_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${prefix}_wheel_link"/>
      <origin xyz="${x} ${y} ${-(wheel_radius)}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:rocker side="left" y_reflect="1" />
  <xacro:rocker side="right" y_reflect="-1" />

  <!-- 5-axis arm on top of the base -->
  <link name="arm_base_link">
    <visual>
      <geometry>
        <cylinder radius="${arm_link_radius*1.2}" length="${arm_link_len*0.4}"/>
      </geometry>
      <material name="Yellow">
        <color rgba="1.0 0.9 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="arm_base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="arm_base_link"/>
    <origin xyz="0 0 ${arm_base_height}" rpy="0 0 0"/>
  </joint>

  <xacro:macro name="arm_link" params="name parent axis">
    <link name="${name}_link">
      <visual>
        <origin xyz="0 0 ${arm_link_len/2}" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${arm_link_radius}" length="${arm_link_len}"/>
        </geometry>
        <material name="Yellow">
          <color rgba="1.0 0.9 0.2 1.0"/>
        </material>
      </visual>
    </link>

    <joint name="${name}_joint" type="revolute">
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <origin xyz="0 0 ${arm_link_len}" rpy="0 0 0"/>
      <axis xyz="${axis}"/>
      <limit effort="10" lower="-3.14" upper="3.14" velocity="1"/>
    </joint>
  </xacro:macro>

  <xacro:arm_link name="arm_1" parent="arm_base_link" axis="0 0 1"/>
  <xacro:arm_link name="arm_2" parent="arm_1_link" axis="0 1 0"/>
  <xacro:arm_link name="arm_3" parent="arm_2_link" axis="0 1 0"/>
  <xacro:arm_link name="arm_4" parent="arm_3_link" axis="1 0 0"/>
  <xacro:arm_link name="arm_5" parent="arm_4_link" axis="0 1 0"/>

</robot>
